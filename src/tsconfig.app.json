{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "",
    "types": [
      "node"
    ],
    "paths" : {
      "@app/*": ["app/*"],
      "@core/*": ["app/core/*"],
      "@shared/*": ["app/shared/*"],
      "@pages/*": ["app/pages/*"],
      "@env/*": ["environments/*"],
      "@assets/*": ["assets/*"],
      "@electron/*": ["../app/*"]
    }
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ],
}
